{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://company.com/order.schema.json",
  "title": "Shipment",
  "description": "Shipment for ShipIt",
  "type": "object",
  "properties": {
    "productIds": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 1000
      }
    },
    "name": {
      "type": "string"
    },
    "addr": {
      "type": "string"
    },
    "zip": {
      "type": "string",
      "pattern": "^\\d{5}(?:[-\\s]\\d{4})?$"
    }
  },
  "additionalProperties": false,
  "required": [
    "productIds",
    "name",
    "addr",
    "zip"
  ]
}
